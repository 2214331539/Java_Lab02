<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 配置日志输出到文件 -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/weather-server.log</file>  <!-- 输出日志的文件路径 -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>  <!-- 日志输出格式 -->
        </encoder>
    </appender>

    <!-- 配置日志级别为 INFO，仅输出到文件 -->
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>

</configuration>
